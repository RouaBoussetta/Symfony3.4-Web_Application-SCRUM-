{% extends 'base.html.twig' %}
{% block container %}
    <p> Listes des themes</p>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {%  for t in Theme %}
        <div class="table-responsive">
            <table class="table table-centered table-nowrap table-hover mb-0">
                <tbody>
                <tr>
                    <td>
                        <h5 class="font-14 my-1"><a href="javascript:void(0);" class="text-body">Nom du themes: </a></h5>
                        <span class="text-muted font-13">{{ t.nomTheme }}</span>
                    </td>
                    <td>
                        <span class="text-muted font-13">Total estimation theme developed:</span> <br/>
                        <span class="badge badge-warning-lighten"> {{ t.totalEstimationThemeJours }} </span>
                    </td>

                    <td class="table-action" style="width: 90px;">






                        <a href="{{ path('featureAfgiche',{'idTheme' :t.idTheme}) }}"> <i class="dripicons-folder-open"></i></a>
                        <a href="{{ path('featureadd',{'idTheme' :t.idTheme}) }}"> <i class="mdi mdi-plus-circle"></i></a>
                    </td>
                </tr>


                </tbody>
            </table>
        </div> <!-- end table-responsive-->



    {% endfor %}
{% endblock %}



















